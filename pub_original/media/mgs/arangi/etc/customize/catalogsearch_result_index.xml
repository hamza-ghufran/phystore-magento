<settings>
	<section>
		<name>themesettings</name>
		<group>
			<name>catalog_search</name>
			<title>Catalog Search Page</title>
			<icon>pe-7s-cash</icon>
			<fields>
				<item>
					<name>layout</name>
					<type>select</type>
					<label>Page Layout</label>
					<option>MGS\ThemeSettings\Model\Config\Source\PageLayout</option>
				</item>
			</fields>
			<fields>
				<label>Products per Row</label>
				<item>
					<name>product_per_row</name>
					<type>select</type>
					<label>On Desktop</label>
					<option>MGS\ThemeSettings\Model\Config\Source\Perrow</option>
				</item>
				<item>
					<name>product_per_row_tablet</name>
					<type>select</type>
					<label>On Tablet</label>
					<option>MGS\ThemeSettings\Model\Config\Source\Perrow</option>
				</item>
				<item>
					<name>product_per_row_mobile</name>
					<type>select</type>
					<label>On Mobile</label>
					<option>MGS\ThemeSettings\Model\Config\Source\Perrow</option>
				</item>
			</fields>
			
			<fields>
				<label>MGS Layered Navigation</label>
				<item>
					<name>mgs_ajaxnavigation_general_enable</name>
					<custom><![CDATA[mgs_ajaxnavigation/general/enable]]></custom>
					<label>Use Ajax</label>
					<type>boolean</type>
				</item>
				<item>
					<name>mgs_ajaxnavigation_general_range_price</name>
					<custom><![CDATA[mgs_ajaxnavigation/general/range_price]]></custom>
					<label>Use Range Price Slide</label>
					<type>boolean</type>
				</item>
				<item>
					<name>mgs_ajaxnavigation_general_shopping_by</name>
					<custom><![CDATA[mgs_ajaxnavigation/general/shopping_by]]></custom>
					<label>Remove Shopping by</label>
					<type>boolean</type>
				</item>
				<item>
					<name>mgs_ajaxnavigation_general_always_show</name>
					<custom><![CDATA[mgs_ajaxnavigation/general/always_show]]></custom>
					<label>Show Filter Content (1 Column)</label>
					<type>boolean</type>
				</item>
			</fields>
		</group>
		
	</section>
</settings>